<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.spawpaw.ssm.dao.UserDAO">
    <insert id="createUser" parameterType="com.spawpaw.ssm.entity.User">
        INSERT INTO user (user_name, password)
        VALUES (
            #{req.user_name},
            #{req.password}
        )
    </insert>
    <update id="updateUser">
        UPDATE user
        SET
            user.password   = #{password}
    </update>
    <select id="getUserByLoginName" resultType="com.spawpaw.ssm.entity.User">
        SELECT
            id,
            user_name,
            password
        FROM user
        WHERE user_name = #{user_name}
    </select>
    <select id="getPasswordByLoginName" resultType="java.lang.String">
        SELECT user.password
        FROM user
        WHERE user_name = #{user_name}
    </select>
    <select id="getUserByUserId" resultType="com.spawpaw.ssm.entity.User">
        SELECT * from user WHERE  id=#{id}
    </select>
</mapper>